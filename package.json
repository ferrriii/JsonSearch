{
  "name": "json-search",
  "version": "1.0.0",
  "description": "Easy and lightweight search library for finding items inside an array of objects",
  "main": "dist/JsonSearch.js",
  "module": "./dist/module/JsonSearch.js",
  "unpkg": "./dist/lib/JsonSearch.js",
  "jsdelivr": "./dist/lib/JsonSearch.js",  
  "scripts": {
    "minify": "uglifyjs ./dist/lib/JsonSearch.js --compress --mangle --source-map --output ./dist/lib/JsonSearch-min.js",
    "lint": "standard --fix",
    "build:umd": "npm run lint && cross-env BABEL_ENV=browser babel src --out-dir dist/lib --source-maps --copy-files && npm run minify",
    "build:esm": "npm run lint && cross-env BABEL_ENV=module babel src --out-dir dist/esm --source-maps --copy-files",
    "build:cjs": "npm run lint && babel src --out-dir dist --source-maps --copy-files",
    "build": "npm run build:cjs && npm run build:umd && npm run build:esm",
    "test": "jest"
  },
  "author": "ferrriii",
  "license": "MIT",

  "repository": {
    "type": "git",
    "url": "git+https://github.com/ferrriii/JsonSearch.git"
  },
  "keywords": [
    "search",
    "JSON",
    "fuzzy"
  ],
  "homepage": "https://github.com/ferrriii/JsonSearch#readme",  
  "devDependencies": {
    "standard": "*",
    "@babel/cli": "7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "jest": "^27.3.1",
    "cross-env": "*",
    "uglify-js": "*"
  },
  "babel": {
    "env": {
      "browser": {
        "presets": [
          ["@babel/preset-env", {
            "bugfixes": true,
            "targets": "> 0.25%",
            "modules": "umd"
          }]
        ]
      },
      "development": {
        "presets": [
          ["@babel/preset-env", {
            "bugfixes": true,
            "targets": {
              "node": "6.10"
            }
          }]
        ]
      },
      "module": {
        "presets": [
          ["@babel/preset-env", {
            "bugfixes": true,
            "targets": {
              "node": "6.10"
            },
            "modules": false
          }]
        ]
      }
    }
  },
  "standard": {
    "ignore": [
      "dist/"
    ],
    "env": {
      "jest": true,
      "node": true
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }  
}